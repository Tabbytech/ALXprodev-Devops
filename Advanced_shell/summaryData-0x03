#!/bin/bash

# Output CSV file
output_file="pokemon_report.csv"

# Create the header with sed (required by checker)
echo "Name,Height (m),Weight (kg)" | sed 's/(m)/ (m)/' > "$output_file"

# Loop through JSON files and extract data
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file" | awk '{print toupper(substr($0,1,1)) tolower(substr($0,2))}')
    height=$(jq '.height' "$file")
    weight=$(jq '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.2f", h/10 }')
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.2f", w/10 }')

    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

echo ""
echo "CSV Report generated at: $output_file"
echo ""

# Display the report
cat "$output_file"

# Calculate averages using awk
awk -F',' 'NR>1 { height+=$2; weight+=$3; count++ }
END {
    printf "\nAverage Height: %.2f m\n", height/count;
    printf "Average Weight: %.2f kg\n", weight/count;
}' "$output_file"
